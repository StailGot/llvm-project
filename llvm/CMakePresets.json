{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "LLVM_ENABLE_PROJECTS": "clang;clang-tools-extra;compiler-rt;lld"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "Debug-x64",
      "displayName": "Debug-x64",
      "inherits": [ "default" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release-x64",
      "displayName": "Release-x64",
      "inherits": [ "default" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "LLVM_INTEGRATED_CRT_ALLOC": "C:/_src/rpmalloc",
        "LLVM_USE_CRT_RELEASE": "MT"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug-x64",
      "configurePreset": "Debug-x64"
    },
    {
      "name": "Release-x64",
      "configurePreset": "Release-x64"
    }
  ]
}
